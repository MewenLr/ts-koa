{
  "name": "new-ts-koa",
  "version": "1.0.0",
  "description": "Quickstarter for koa ts server.",
  "main": "./src/index",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node ./src/index.ts",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx ./ --fix",
    "lint:trans": "eslint --ext .json --format node_modules/eslint-plugin-i18n-json/formatter.js ./src/config/translations/",
    "lint:trans:fix": "eslint --ext .json --format node_modules/eslint-plugin-i18n-json/formatter.js ./src/config/translations/ --fix",
    "mjml": "./node_modules/.bin/mjml",
    "pm:logs": "pm2 logs",
    "pm:ls": "pm2 list",
    "prod": "tsc && pm2-runtime start ./dist/src/index.js -i max --name ts-koa",
    "test": "sudo chown $USER:$USER -R ./node_modules/.cache/mongodb-memory-server/mongodb-binaries && jest --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@koa/cors": "*",
    "bcryptjs": "*",
    "jsonwebtoken": "*",
    "koa": "*",
    "koa-bodyparser": "*",
    "koa-helmet": "*",
    "koa-i18n": "*",
    "koa-jwt": "*",
    "koa-locale": "*",
    "koa-joi-router": "*",
    "mjml": "*",
    "mongoose": "*",
    "nodemailer": "*",
    "pm2": "*"
  },
  "devDependencies": {
    "@types/bcryptjs": "*",
    "@types/jest": "*",
    "@types/koa-bodyparser": "*",
    "@types/jsonwebtoken": "*",
    "@types/koa": "*",
    "@types/koa-helmet": "*",
    "@types/koa-cors": "*",
    "@types/mjml": "*",
    "@types/mongoose": "*",
    "@types/nodemailer": "*",
    "@types/supertest": "*",
    "@types/koa-joi-router": "*",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-typescript": "*",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-i18n-json": "*",
    "jest": "*",
    "mongodb-memory-server": "*",
    "nodemon": "*",
    "supertest": "*",
    "typescript": "*",
    "ts-node": "*",
    "ts-jest": "*"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "keywords": [],
  "author": "MewenLr",
  "license": "ISC"
}
